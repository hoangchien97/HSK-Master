  "chat.agent.maxRequests": 1000,
  "chat.tools.terminal.autoApprove": {
    // Allow: cd && safe commands
    "^cd\\s+.*&&\\s*(npx|node|npm|pnpm|yarn|git|bun|deno)\\b.*": true,

    // Allow: direct safe commands
    "^(git|npx|node|npm|pnpm|yarn|bun|deno)\\b.*": true,

    // Allow: simple cd
    "^cd\\s+.*": true,

    // ===== BLOCK destructive =====
    "^rm\\b.*": false,
    "^rmdir\\b.*": false,
    "^del\\b.*": false,
    "^erase\\b.*": false,
    "^Remove-Item\\b.*": false,
    "^rd\\b.*": false,

    "^git\\s+reset\\b.*--hard\\b.*": false,
    "^git\\s+clean\\b.*-f\\b.*": false,
    "^git\\s+branch\\b.*-(d|D)\\b.*": false,

    "^taskkill\\b.*": false,
    "^kill\\b.*": false
  },
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.profiles.windows": {
    "Git Bash": {
      "path": "C:\\Program Files\\Git\\bin\\bash.exe"
    }
  },
  "terminal.integrated.env.windows": {
    "CI": "true",
    "GIT_TERMINAL_PROMPT": "0",
    "PIP_DISABLE_PIP_VERSION_CHECK": "1"
  }
}
